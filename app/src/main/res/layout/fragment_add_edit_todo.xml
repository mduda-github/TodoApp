<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.todoapp.ui.AddEditTodoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_text_todo_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Todo name"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#0F1A20" />

        <EditText
            android:id="@+id/edit_text_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Category"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:layout_marginBottom="12dp"
            android:textColor="#0F1A20" />

        <CheckBox
            android:id="@+id/checkbox_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#0F1A20"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="12dp"
            android:text="Priority" />

        <TextView
            android:id="@+id/text_view_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#0F1A20"
            android:maxLines="1"
            android:paddingLeft="6dp"
            tools:text="Date created: " />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:backgroundTint="#2274A5"
        android:src="@drawable/baseline_check_circle_outline_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>